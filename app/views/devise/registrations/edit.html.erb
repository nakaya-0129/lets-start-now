<%= render "shared/account"%>
<div class="account-page">
<div class="account-post">
<h2 class="account-title"><%= resource_name.to_s.humanize %> Profile</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "shared/error_messages", model: f.object %>
      <div class= "login-field">
      <p>プロフィール画像を選択して下さい</p>
        <%= f.file_field :image, id:"profile-image",class: "text" %>
      </div>

      <div class="login-field">
      <h4>ユーザー名の変更</h4>
        <%= f.text_field :nick_name, autofocus: true, maxlength: "8" ,class: "text"%>
      </div>

      <div class="login-field">
      <h4>emailアドレスの変更</h4>
        <%= f.email_field :email , autofocus: true, autocomplete: "email", class: "text" %>
      </div>
      
      <br>
      <h4>プロフィール編集</h4>
      <br>
      <div class="login-text">
       <%= f.text_area :profile, autofocus: true%>
      </div>
  <div class="actions">
    <%= f.submit "Update" ,class:"edit-btn"%>
  </div>
<% end %>
</div>

