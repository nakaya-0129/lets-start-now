<%= render "shared/form"%>
<div class="login-form">
<div class= "login-text">
<h1>Let's <br>
    Start<br>
    Now</h1>
</div>

  <div class="login-contents">
    <h2 class="login-title">Login Form</h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object%>
      <div class="login-field">
        <%= f.email_field :email, autofocus: true ,class: "text",placeholder: "----登録したメールアドレスを入力して下さい----"%>
      </div>

      <div class="login-field">
        <%= f.password_field :password, autocomplete: "off" , class: "text",placeholder:"-----ユーザーのパスワードを入力して下さい-----"%>
      </div>

      <div class="actions">
        <%= f.submit "Login " ,class: "sign-up"%>
      </div>
    <% end %>
   </div>
</div>