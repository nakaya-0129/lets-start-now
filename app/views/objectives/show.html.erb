<%=render "shared/login" %>
<div class= "object-show-box">
<div class= "object-image-box">
  <%= image_tag @objective.image.variant(gravity: :center, resize: '450x450'),class: "object-image" %>
</div>
<div class="object-explain-box">
      <span><%= @objective.full_name %></span>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-object">テーマ</th>
          <td class="detail-value"><%= @objective.category.name %></td>
        </tr>
        <tr>
          <th class="detail-object">毎日実行できる時間</th>
          <td class="detail-value"><%= @objective.hobit.name %></td>
        </tr>
        <tr>
          <th class="detail-object">一日の目標</th>
          <td class="detail-value"><%= @objective.one_day %></td>
        </tr>
        <tr>
          <th class="detail-object">一週間の目標</th>
          <td class="detail-value"><%= @objective.one_week %></td>
        </tr>
        <tr>
          <th class="detail-object">一ヶ月の目標</th>
          <td class="detail-value"><%= @objective.month %></td>
        </tr>
        <tr>
          <th class="detail-item">三ヶ月間の目標</th>
          <td class="detail-value"><%= @objective.three_month %></td>
        </tr>
        <tr>
          <th class="detail-item">今年の目標</th>
          <td class="detail-value"><%= @objective.year %></td>
        </tr>
      </tbody>
    </table>
  <div class= "object-display">
<% if user_signed_in? && current_user.id == @objective.user_id%>
    <%= link_to '目標の修正' ,edit_objective_path(@objective.id), method: :get, class: "btn btn--object" %>
    <span>or</span>
    <%= link_to '削除', objective_path(@objective.id), method: :delete, class:'btn btn--object' %>
 <% elsif user_signed_in? %>
    <div class= "comment-container">
    <%= form_with(model: [@objective, @comment], local: true) do |form| %>
        <%= form.text_area :text, placeholder: "コメントする", rows: "2" ,class: "text"%>
        <%= form.submit "メッセージを送る",class: "send-btn" %>
     <% end %>
     <% else %>
    <% end %>
    </div>
  </div>
     <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <%= comment.text %>
          </p>
        <% end %>
      <% end %>
   </div>
   </div>